<!-- Begin Sign Up Modal -->
<div id="signup_modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="signup_modal_label" aria-hidden="true">
 <div class="modal-dialog">
  <div class="modal-content">
  <div class="modal-header"> 
    <div class="row">
	    <div class="col-md-6">
        <h3 id="signup_modal_label" class="modal-title" >Register</h3>
       </div>
       <div class="col-md-6">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="signup_modal_label" class="modal-title" >Sign In</h3>
      </div><!-- col-md-6 -->
    </div><!-- row -->
  </div><!-- modal-header -->
  <div class="modal-body">
		<div class="row">
		  <div class="col-md-6">
			  <%= simple_form_for(:user, :url => user_registration_path ) do |f| %>
			    <%= f.error_notification %>

			      <%= f.input :uname, :required => false, label: "Username" %>
			      <%= f.input :email, :required => false, :autofocus => true %>
			      <%= f.input :password, :required => false %>
			      <%= f.input :password_confirmation, :required => false, label: "Confirm Password" %>
			      <%= submit_tag "Sign Up", class: "btn btn-success" %>
			  <% end %>
		  </div>
		  <div class="col-md-6">
		    <%= simple_form_for(:user, url: user_session_path, class: "form-inline" ) do |f| %>
		        <%= f.input :email, :required => false, :autofocus => true %>
		        <%= f.input :password, :required => false %>
		        <%= f.input :remember_me, :as => :boolean  %>
		        <%= submit_tag "Sign In", class: "btn btn-success" %>
		    <% end %>
        <p><%= link_to "Forgot your password?", new_password_path(:user) %></p>
		  </div><!-- col-md-6 -->
		</div><!-- row -->
  </div><!-- modal-body -->
  </div><!-- modal-content -->
 </div><!-- modal-dialog -->
</div> <!-- modal -->
<!-- End Sign Up Modal -->
